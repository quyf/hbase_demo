<configuration>

	<!-- 指定hbase在HDFS上存储的路径 -->
	<property>
    		<name>hbase.rootdir</name>
    		<value>hdfs://quyf-nn-cluster/hbase</value>
	</property>
	<!-- 指定hbase是分布式的 -->
	<property>
    		<name>hbase.cluster.distributed</name>
    		<value>true</value>
	</property>
	<!-- 指定zk的地址，多个用“,”分割 -->

	<property>
		<name>hbase.zookeeper.quorum</name>
		<value>bg1,bg2,bg3</value>
	</property>
	<property>
		<name>hbase.zookeeper.property.clientPort</name>
		<value>2181</value>
	</property>
	<!--由于网络其它原因导致连接的时间超长,以修改hbase默认的最大链接时间长一些-->
	<property>
		<name>hbase.master.maxclockskew</name>
		<value>120000</value>
	</property>
</configuration>
